# Environment
NODE_ENV=development

# Server
PORT=5001

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=library_db
DB_USER=postgres
DB_PASSWORD=password123

# JWT Secrets (use strong random strings in production)
JWT_SECRET=your_jwt_secret_key_here_min_32_chars_test_only
JWT_REFRESH_SECRET=your_refresh_secret_key_here_min_32_chars_test_only

# JWT Expiration
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt Rounds
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100